server
{
    
	server_name=test

	listen=127.0.0.1:8081

	client_body_size_max=1002443434

	error_page=404 /error_page.html

	location / 
    {

		allow_methods=GET	POST

		redirect=303 /redirect.html

		root=/path/to/dir
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/goinfre

	}

	location /a 
    {

		allow_methods=GET POST DELETE

		redirect=301 /redirect.html

		root=/path/to/dir
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/goinfre

	}

}

server
{
    
	server_name=test2

	listen=localhost:8082

	client_body_size_max=10034
	error_page=404 /error_page.html


	location / 
    {

		allow_methods=GET	POST

		redirect=303 /redirect.html

		root=/path/to/dir
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/goinfre

	}

	location /a 
    {

		allow_methods=GET POST DELETE

		redirect=301 /redirect.html

		root=/path/to/dir
		
		autoindex=on

		default=/default.html

		cgi=.php /bin/php

		upload=/goinfre

	}

}

