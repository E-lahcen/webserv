server
{
    
	server_name=www.exemples.com

	listen=10.11.3.12:8081

	client_body_size_max=184467440

	error_page=404 /error_page.html

	location / 
    {

		allow_methods=GET	POST

		# redirect=303 /redirect.html

		root={PATH}/root
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/upload

	}

	location /a 
    {

		allow_methods=GET POST DELETE

		redirect=301 /redirect.html

		root=/path/to/dir
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/goinfre

	}

}
server
{
    
	server_name=www.exemples.com

	listen=localhost:8080

	client_body_size_max=184467440

	error_page=404 /error_page.html

	location / 
    {

		allow_methods=GET	POST

		# redirect=303 /redirect.html

		root={PATHS}/root
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/upload

	}

	location /a 
    {

		allow_methods=GET POST DELETE

		redirect=301 /redirect.html

		root=/path/to/dir
		
		autoindex=on

		default=/default.html

		cgi=.py /bin/python3

		upload=/goinfre

	}

}